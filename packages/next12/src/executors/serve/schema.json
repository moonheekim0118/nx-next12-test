{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "port": {
      "type": "number",
      "description": "Port to listen on.",
      "default": 3000
    },
    "hostname": {
      "type": "string",
      "description": "Hostname to listen on.",
      "default": "localhost"
    },
    "customServer": {
      "type": "boolean",
      "description": "Use a custom server.",
      "default": false
    }
  }
}
